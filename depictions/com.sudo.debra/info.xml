<package>
	<id>com.sudo.debra</id>
	<name>Debra</name>
	<version>1.6</version>
	<compatibility>
		<firmware>
			<miniOS>11.0</miniOS>
		</firmware>
	</compatibility>
	<dependencies>
		<package>bash (>= 5.0.3-2)</package>
		<package>coreutils (>= 8.31-1)</package>
		<package>grep (>= 3.1-1)</package>
		<package>sed (>= 4.5-1)</package>
		<package>gawk (>= 4.2.1-1)</package>
	</dependencies>
	<shortDescription>Deb Repackaging Assistant. Simply type 'debra' into a terminal.</shortDescription>
	<descriptionlist>
		<description>Usage: Type the following command(s) into NewTerm or MobileTerminal and follow the menu interface. Best if ran as root.</description>
		<description>debra</description>
		<description>debra tweaklist</description>
		<description>debra 'tweakfilename'</description>
		<description>debra deblist</description>
		<description>debra 'debfilename'</description>
	</descriptionlist>
