<package>
	<id>com.sudo.debra</id>
	<name>Debra</name>
	<version>1.2</version>
	<compatibility>
		<firmware>
			<miniOS>11.0</miniOS>
		</firmware>
	</compatibility>
	<dependencies>
		<package>mobilesubstrate</package>
	</dependencies>
	<shortDescription>Deb Repackaging Assistant. Simply type 'debra' into a terminal.</shortDescription>
	<descriptionlist>
		<description>Usage: Type the following command(s) into NewTerm or MobileTerminal and follow the menu interface</description>
		<description>debra</description>
		<description>debra tweaklist</description>
		<description>debra 'tweakfilename'</description>
		<description>debra deblist</description>
		<description>debra 'debfilename'</description>
	</descriptionlist>
